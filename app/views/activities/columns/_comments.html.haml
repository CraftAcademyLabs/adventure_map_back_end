- if resource.comments.any?
  %table
    %tr
      %td{style: 'width: 40%;'}
        Comment
      %td{style: 'width: 30%;'}
        User
      %td
        Actions
    -resource.comments.each do |comment|
      %tr{data: {comment: {id: comment.id}}}
        %td
          = comment.body
        %td
          = link_to resource.user.name, user_path(resource.user)
        %td
          .btn-group.btn-group-sm.pull-right
            = link_to 'Edit', edit_comment_path(comment), class: 'btn btn-default'
            = link_to 'Delete', comment_path(comment), class: 'btn btn-danger',
              data: { confirm: 'Are you sure', method: 'delete' }

.btn-group.btn-group-sm.pull-right
  = link_to 'New Comment', new_comment_path,
          class: 'btn btn-default'
