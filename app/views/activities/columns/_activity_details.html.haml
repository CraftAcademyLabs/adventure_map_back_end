%table
  - resource.activity_details.each do |activity_detail|
    %tr{data: {recording: {id: activity_detail.id }}}
      %td{style: 'width: 50%;'}
        = activity_detail.file_attachment
      %td{style: 'width: 50%;'}
        = activity_detail.type
      %td
        .btn-group.btn-group-sm.pull-right
          = link_to 'View', activity_detail_path(activity_detail),
          class: 'btn btn-default'
          = link_to 'Edit', edit_activity_detail_path(activity_detail),
          class: 'btn btn-default'
          = link_to 'Delete', activity_detail_path(activity_detail),
          class: 'btn btn-danger',
          data: {confirm: 'Are you sure?', method: 'delete'}


